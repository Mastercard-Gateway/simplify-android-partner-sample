<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="matrix"
        android:src="@drawable/android_background"
        tools:background="@color/gray_med"/>

    <TextView
        android:id="@+id/text_partner_sdk_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_margin"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gray_text"
        android:text="@string/android_partner_sdk"/>

    <TextView
        android:id="@+id/sdk_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_partner_sdk_label"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        android:textColor="@color/gray_text_light"
        tools:text="Android SDK"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:background="@android:color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin"
            android:layout_marginBottom="@dimen/padding_margin"
            android:layout_marginRight="@dimen/padding_margin_large"
            android:layout_marginLeft="@dimen/padding_margin_large"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:background="@drawable/orange_button"
            android:text="@string/view_demo"/>
        </LinearLayout>



</RelativeLayout>
